<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/device_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    card_view:cardElevation="@dimen/elevation_normal"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/device_container_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_primary"
        android:divider="@drawable/divider"
        android:orientation="horizontal"
        android:padding="@dimen/margin_standard"
        android:showDividers="middle">

        <TextView
            android:id="@+id/device_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/TextHeadline"
            tools:text="Device"
            />

        <RelativeLayout
            android:id="@+id/person_container_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/device_awesome_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextSubheading"
                tools:text="Awesomeness"
                />

            <TextView
                android:id="@+id/device_awesome_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_awesome_heading"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextBody1"
                tools:text="50"
                />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>






