<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/person_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/elevation_normal"
    >


    <RelativeLayout
        android:id="@+id/person_container_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_primary"
        android:padding="@dimen/margin_standard"
        >

        <ImageView
            android:id="@+id/person_image"
            android:layout_width="@dimen/main_person_size"
            android:layout_height="@dimen/main_person_size"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin_standard"
            android:adjustViewBounds="true"
            tools:src="@drawable/ic_person_black_24dp"
            />

        <ImageButton
            android:id="@+id/person_delete_btn"
            android:layout_width="@dimen/main_delete_btn_size"
            android:layout_height="@dimen/main_delete_btn_size"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_standard"
            tools:src="@drawable/ic_indeterminate_check_box_black_24dp"
            />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/person_image"
            android:layout_toLeftOf="@id/person_delete_btn"
            android:singleLine="true"
            android:textAppearance="@style/TextSubheading"
            tools:text="Name"
            />

        <TextView
            android:id="@+id/person_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/person_image"
            android:layout_toLeftOf="@id/person_delete_btn"
            android:layout_below="@id/person_name"
            android:singleLine="true"
            android:textAppearance="@style/TextBody1"
            tools:text="Age: 25"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>






