<resources>

    <!-- DISPLAY 4 -->
    <style
        name="TextDisplay4"
        parent="TextAppearance.AppCompat.Display4">
        <item name="android:textSize">@dimen/txt_display_4</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
    </style>


    <!-- DISPLAY 3 -->
    <style
        name="TextDisplay3"
        parent="TextAppearance.AppCompat.Display3">
        <item name="android:textSize">@dimen/txt_display_3</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
    </style>


    <!-- DISPLAY 2 -->
    <style
        name="TextDisplay2"
        parent="TextAppearance.AppCompat.Display2">
        <item name="android:textSize">@dimen/txt_display_2</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
    </style>


    <!-- DISPLAY 1 -->
    <style
        name="TextDisplay1"
        parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/txt_display_1</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
    </style>


    <!-- HEADLINE -->
    <style
        name="TextHeadline"
        parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/txt_headline</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>


    <!-- TITLE -->
    <style
        name="TextTitle"
        parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/txt_title</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>


    <!-- TITLE INVERSE -->
    <style
        name="TextTitleInverse"
        parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="android:textSize">@dimen/txt_title</item>
        <item name="android:textColor">?attr/android:textColorPrimaryInverse</item>
