        name="TextBodyInverse1"
        parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/txt_body</item>
        <item name="android:textColor">?attr/android:textColorPrimaryInverse</item>
    </style>


    <!-- CAPTION -->
    <style
        name="TextCaption"
        parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/txt_caption</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
    </style>


    <!-- BUTTON -->
    <style
        name="TextButton"
        parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/txt_btns</item>
        <item name="android:textColor">@color/white_primary</item>
    </style>


    <!-- BUTTON INVERSE -->
    <style
        name="TextButtonInverse"
        parent="TextAppearance.AppCompat.Widget.Button.Inverse">
        <item name="android:textSize">@dimen/txt_btns</item>
